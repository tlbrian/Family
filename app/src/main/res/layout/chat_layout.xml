<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/textView_messages"
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_above="@+id/imageView_function"
	    android:maxLines="99999"
	    android:textIsSelectable="true"
	    android:autoLink="all"
	    android:hint="@string/messages_hint"
	    android:textColorHint="@color/blue" />
    
    <ImageView
        android:id="@+id/imageView_function"
        android:contentDescription="@string/imageView_function"
   	    android:layout_width="wrap_content"
	    android:layout_height="50dp"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:src="@drawable/ic_keyboard" />

    
    <ImageButton
	    android:id="@+id/imageButton_send"
	    android:contentDescription="@string/imageButton_send"
	    android:layout_width="wrap_content"
	    android:layout_height="50dp"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentRight="true"
	    android:src="@drawable/enter_info" />
    
    <EditText
    	android:id="@+id/editText_input"
   	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
    	android:inputType="textMultiLine"
    	android:imeOptions="actionSend"
    	android:layout_alignParentBottom="true"
    	android:layout_toLeftOf="@+id/imageButton_send"
    	android:layout_toRightOf="@+id/imageView_function"
    	android:hint="@string/input_hint" />


</RelativeLayout>
