<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/message_item_margin_vertical"
                android:layout_marginBottom="@dimen/message_item_margin_vertical"
                >

    <ImageView
        android:id="@+id/icon_message_friend"
        android:layout_width="@dimen/message_icon_width"
        android:layout_height="@dimen/message_icon_height"
        android:scaleType="fitCenter"
        android:layout_marginLeft="@dimen/message_item_icon_margin_horizontal"
        android:layout_marginRight="@dimen/message_item_icon_margin_horizontal"
        android:src="@drawable/ic_action_add_person"/>

    <TextView
        android:id="@+id/text_message_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/message_item_other_margin_horizontal"
        android:textAppearance="?android:textAppearanceLarge"/>

    <TextView
        android:id="@+id/text_message_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/message_item_self_margin_horizontal"
        android:textAppearance="?android:textAppearanceLarge"
        android:visibility="gone"/>

</LinearLayout>